{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2022", "dom"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["vitest", "node"],
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["./__tests__/*"],
      "@osric/engine": ["./engine/index.ts"],
      "@osric/osric-engine": ["./osric-engine/index.ts"],
      "@osric/renderer-underworld": ["./renderer-underworld/index.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "distributable-underworld/**"]
}
